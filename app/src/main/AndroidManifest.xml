<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madhurarora.treebo">

    <application
        android:name=".app.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeOverlay.MyNoTitleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.NotesActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.AddNoteActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
